{
  "name": "Go K8s Dev",
  "image": "mcr.microsoft.com/devcontainers/go:1.22-bullseye", 
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/docker-cli:1": {},
    "ghcr.io/devcontainers/features/kubectl:1": { "version": "latest" },
    "ghcr.io/devcontainers/features/node:1": { "version": "lts" }
  },
  "remoteUser": "vscode",
  "onCreateCommand": "echo 'Container created' | tee /tmp/container-created.log",
  "postCreateCommand": "(.devcontainer/install-kind.sh || echo 'KIND install failed') && (.devcontainer/checkout-repos.sh || echo 'Checkout repos failed') && (.devcontainer/recreate-existing-worktrees.sh || echo 'Worktree recreation failed') && .devcontainer/setup-shell-environment.sh 2>&1 | tee /tmp/postCreateCommand.log",
  "postStartCommand": ".devcontainer/setup-shell-environment.sh 2>&1 | tee /tmp/postStartCommand.log",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "anthropic.claude-dev"
      ]
    }
  },
  "forwardPorts": [6789, 8080]
}